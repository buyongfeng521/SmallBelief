
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>登录</title>

    <!-- bootstrap css-->
    <link rel="stylesheet" href="~/content/boot/css/bootstrap.min.css">

    <!-- metisMenu css -->
    <link rel="stylesheet" href="~/content/css/metisMenu.min.css">

    <!-- font-awesome css -->
    <link rel="stylesheet" href="~/content/css/font-awesome.min.css">

    <!-- main css -->
    <link rel="stylesheet" href="~/content/css/main.css">

    <!-- jquery -->
    <script src="~/content/js/jquery-2.2.4.min.js"></script>
    <script src="~/content/js/jquery.MsgProcess.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <!-- bootstrap js -->
    <script src="~/content/boot/js/bootstrap.min.js"></script>

    <!-- metisMenu js -->
    <script src="~/content/js/metisMenu.min.js"></script>

    <!-- main js -->
    <script src="~/content/js/main.js"></script>

    <script>
        function afterSubmit(data) {
            $.procAjaxData(data, function () {
                location.href = "/Home/Index";
            });
        }
    </script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">请登录</h3>
                    </div>
                    <div class="panel-body">
                            @using (Ajax.BeginForm("Login", "Home", FormMethod.Post, new AjaxOptions() { OnSuccess = "afterSubmit" }))
                            { 
                                <fieldset>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="用户名" name="user_name" type="text" autofocus required>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="密码" name="user_psw" type="password" value="" required>
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input name="remember" type="checkbox" value="Remember Me">记住我
                                        </label>
                                    </div>
                                    <button type="submit" class="btn btn-lg btn-success btn-block">登录</button>
                                </fieldset>
                            }
                    </div>
                </div>
            </div>
        </div>
    </div>



</body>



</html>
