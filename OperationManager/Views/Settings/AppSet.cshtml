
@{
    ViewBag.Title = "APP设置";
    Layout = "~/Views/_Layout.cshtml";
}



<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">APP设置</h3>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                在线客服
            </div>
            <div class="panel-body">
                <form id="frmSetting">
                    <div class="form-group">
                        <label>客服电话：</label>
                        <input type="text" class="form-control" id="service_tel" name="service_tel" value="@ViewBag.service_tel" placeholder="客服电话">
                    </div>
                    <div class="form-group">
                        <label>微信号：</label>
                        <input type="text" class="form-control" id="wx_id" name="wx_id" value="@ViewBag.wx_id" placeholder="微信号">
                    </div>
                    <div class="form-group">
                        <label>微信公众号：</label>
                        <input type="text" class="form-control" id="wx_public_id" name="wx_public_id" value="@ViewBag.wx_public_id" placeholder="微信公众号">
                    </div>
                    <div class="form-group">
                        <label>QQ：</label>
                        <input type="text" class="form-control" id="service_qq" name="service_qq" value="@ViewBag.service_qq" placeholder="微信公众号">
                    </div>

                    <button type="button" class="btn btn-success" onclick="saveInfo()">保存</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                其他设置
            </div>
            <div class="panel-body">

            </div>
        </div>
    </div>
</div>


<script>
    function saveInfo() {
        var url = "/Settings/AppSet";
        $.post(url, $("#frmSetting").serialize(), function (data) {
            $.procAjaxData(data);
        });
    }
</script>