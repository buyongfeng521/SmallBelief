@model Model.t_admin_user
@{
    ViewBag.Title = "UserInfo";
    Layout = "~/Views/_Layout.cshtml";
}

<!--head-->
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">用户资料</h3>
    </div>
</div>

<!--content-->
<div class="row">

    <form class="form-horizontal" id="frmUser">
        <div class="form-group">
            @Html.HiddenFor(u => u.ID)
            <label class="col-sm-2 control-label">用户名：</label>
            <div class="col-sm-5">
                @*<input type="email" class="form-control" id="user_name" name="user_name" placeholder="用户名">*@
                <p class="form-control-static">@Model.user_name</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">密码：</label>
            <div class="col-sm-5">
                <input type="password" class="form-control" id="user_psw" name="user_psw" value="**********************" placeholder="密码">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="button" class="btn btn-info" onclick="saveInfo()">保存</button>
            </div>
        </div>
    </form>

</div>

<script>
    function saveInfo() {
        var url = "/Settings/UserInfo";
        $.post(url, $("#frmUser").serialize(), function (data) {
            $.procAjaxData(data);
        });
    }
</script>
