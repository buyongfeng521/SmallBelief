
@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/_Layout.cshtml";
}

<!--head-->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">会员列表</h1>
    </div>
</div>

<!--content-->
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("UserList", "User", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="form-group">
                <label class="sr-only">keywords</label>
                <input type="text" class="form-control" id="keywords" name="keywords" placeholder="关键字" value="@ViewBag.Keywords" maxlength="20">
            </div>
            <button class="btn btn-default">搜索</button>
            
            <a href="javascript:" class="btn btn-info pull-right" id="btnAdd">增加会员</a>
        }
        <hr />
        <div class="dataTable_wrapper">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>编号</th>
                    <th>会员名称</th>
                    <th>手机号码</th>
                    <th>注册时间</th>
                    <th>会员状态</th>
                    <th>操作</th>
                </tr>
                <tr>
                    <td>1</td>
                    <td>小菜</td>
                    <td>18601681037</td>
                    <td>2016-6-5</td>
                    <td>正常</td>
                    <td>
                        <a href="#">修改</a>
                        <a href="#">查看</a>
                    </td>
                </tr>

            </table>
        </div>
    </div>
</div>


