@using Webdiyer.WebControls.Mvc;
@model PagedList<Model.t_order_info>
@{
    ViewBag.Title = "订单列表";
    Layout = "~/Views/_Layout.cshtml";
}

<!--head-->
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">订单列表</h3>
    </div>
</div>

<!--content-->
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("OrderList", "Order", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="form-group">
                <label class="sr-only">keywords</label>
                <input type="text" class="form-control" id="keywords" name="keywords" placeholder="关键字" value="@ViewBag.Keywords" maxlength="20">
            </div>
            <button class="btn btn-default">搜索</button>
        }
        <hr />
        <div class="dataTable_wrapper">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>编号</th>
                    <th>订单号</th>
                    <th>商品总金额</th>
                    <th>应付款金额</th>
                    <th>订单状态</th>
                    <th>操作</th>
                </tr>
                @{
                    int i = 0;
                    foreach (var item in Model)
                    {
                        i++;
                        <tr>
                            <td>@i</td>
                            <td>@item.order_sn</td>
                            <td>@item.goods_amount</td>
                            <td>@item.order_amount</td>
                            <td>@item.order_status</td>
                            <td>
                                <a href="#">查看</a>
                            </td>
                        </tr>
                    }
                }

            </table>
        </div>
    </div>
</div>

