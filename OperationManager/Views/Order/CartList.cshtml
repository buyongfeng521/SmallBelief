
@{
    ViewBag.Title = "购物车列表";
    Layout = "~/Views/_Layout.cshtml";
}

<!--head-->
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">购物车列表</h3>
    </div>
</div>

<!--content-->
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("CartList", "Order", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="form-group">
                <label class="sr-only">keywords</label>
                <input type="text" class="form-control" id="keywords" name="keywords" placeholder="关键字" value="@ViewBag.Keywords" maxlength="20">
            </div>
            <button class="btn btn-default">搜索</button>
        }
        <hr />
        <div class="dataTable_wrapper">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>编号</th>
                    <th>会员</th>
                    <th>购物类型</th>
                    <th>商品名称</th>
                    <th>商品数量</th>
                    <th>操作</th>
                </tr>
                <tr>
                    <td>1</td>
                    <td>用户001</td>
                    <td>预购订单</td>
                    <td>商品001</td>
                    <td>10</td>
                    <td>
                        <a href="#">查看</a>
                    </td>
                </tr>

            </table>
        </div>
    </div>
</div>

