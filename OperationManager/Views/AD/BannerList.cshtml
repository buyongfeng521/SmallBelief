
@{
    ViewBag.Title = "BannerList";
    Layout = "~/Views/_Layout.cshtml";
}

<!--head-->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Banner列表</h1>
    </div>
</div>

<!--content-->
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("BannerList", "AD", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="form-group">
                <label class="sr-only">keywords</label>
                <input type="text" class="form-control" id="keywords" name="keywords" placeholder="关键字" value="@ViewBag.Keywords" maxlength="20">
            </div>
            <button class="btn btn-default">搜索</button>

            <a href="javascript:" class="btn btn-info pull-right" id="btnAdd">增加Banner</a>
        }
        <hr />
        <div class="dataTable_wrapper">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>编号</th>
                    <th>banner名称</th>
                    <th>点击类型</th>
                    <th>创建时间</th>
                    <th>操作</th>
                </tr>
                <tr>
                    <td>1</td>
                    <td>banner001</td>
                    <td>URL</td>
                    <td>2016-12-16</td>
                    <td>
                        <a href="#">修改</a>
                        <a href="#">删除</a>
                    </td>
                </tr>

            </table>
        </div>
    </div>
</div>

