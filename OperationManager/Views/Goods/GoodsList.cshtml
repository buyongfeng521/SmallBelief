
@{
    ViewBag.Title = "GoodsList";
    Layout = "~/Views/_Layout.cshtml";
}

<!--head-->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">商品列表</h1>
    </div>
</div>

<!--content-->
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("GoodsList", "Goods", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="form-group">
                <label class="sr-only">keywords</label>
                <input type="text" class="form-control" id="keywords" name="keywords" placeholder="关键字" value="@ViewBag.Keywords" maxlength="20">
            </div>
            <button class="btn btn-default">搜索</button>

            <a href="javascript:" class="btn btn-info pull-right" id="btnAdd">增加商品</a>
        }
        <hr />
        <div class="dataTable_wrapper">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>编号</th>
                    <th>商品名称</th>
                    <th>是否热销</th>
                    <th>是否明星</th>
                    <th>库存</th>
                    <th>锁定库存</th>
                    <th>是否上架</th>
                    <th>操作</th>
                </tr>
                <tr>
                    <td>1</td>
                    <td>商品001</td>
                    <td>√</td>
                    <td>√</td>
                    <td>100</td>
                    <td>50</td>
                    <td>√</td>
                    <td>
                        <a href="#">修改</a>
                        <a href="#">上架</a>
                        <a href="#">删除</a>
                    </td>
                </tr>

            </table>
        </div>
    </div>
</div>


<script>
    function del(id) {
        if (confirm('确定删除？')) {
            var url = '/Goods/GoodsDelete';
            $.post(url, { "id": id }, function (data) {
                $.procAjaxData(data, function () {
                    location.href = "/Goods/GoodsList";
                })
            });
        }
    }
</script>


