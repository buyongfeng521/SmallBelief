@using Webdiyer.WebControls.Mvc;
@model PagedList<Model.t_goods>
@{
    ViewBag.Title = "GoodsList";
    Layout = "~/Views/_Layout.cshtml";
}

<!--head-->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">商品列表</h1>
    </div>
</div>

<!--content-->
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("GoodsList", "Goods", FormMethod.Get, new { @class = "form-inline" }))
        {
            <div class="form-group">
                <label class="sr-only">keywords</label>
                <input type="text" class="form-control" id="keywords" name="keywords" placeholder="关键字" value="@ViewBag.Keywords" maxlength="20">
            </div>
            <button class="btn btn-default">搜索</button>

            <a href="javascript:" class="btn btn-info pull-right" id="btnAdd">增加商品</a>
        }
        <hr />
        <div class="dataTable_wrapper">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>编号</th>
                    <th>商品名称</th>
                    <th>是否热销</th>
                    <th>是否明星</th>
                    <th>库存</th>
                    <th>锁定库存</th>
                    <th>是否上架</th>
                    <th>操作</th>
                </tr>
                @{
                    int i = 0;
                    foreach (var item in Model)
                    {
                        i++;
                        <tr>
                            <td>@i</td>
                            <td>@item.goods_name</td>
                            <td>
                                @if (item.is_hot == true)
                                {
                                    <i class="glyphicon glyphicon-ok text-success"></i>
                                }
                                else
                                { 
                                    <i class="glyphicon glyphicon-remove text-danger"></i>
                                }
                            </td>
                            <td>
                                @if (item.is_best == true)
                                {
                                    <i class="glyphicon glyphicon-ok text-success"></i>
                                }
                                else
                                {
                                    <i class="glyphicon glyphicon-remove text-danger"></i>
                                }
                            </td>
                            <td>@item.goods_number</td>
                            <td>@item.goods_lock_number</td>
                            <td>
                                @if (item.is_on_sale == true)
                                {
                                    <i class="glyphicon glyphicon-ok text-success"></i>
                                }
                                else
                                {
                                    <i class="glyphicon glyphicon-remove text-danger"></i>
                                }
                            </td>
                            <td>
                                <a href="javascript:">修改</a>
                                &nbsp;&nbsp;
                                @if (item.is_on_sale == true)
                                {
                                    <a href="javascript:" class="text-danger">下架</a>
                                }
                                else
                                { 
                                    <a href="javascript:" class="text-success">上架</a>    
                                }
                                
                                &nbsp;&nbsp;
                                <a href="javascript:">删除</a>
                            </td>
                        </tr>
                    }
                }
            </table>

            <div class="text-center">
                <nav>
                    @Html.Pager(Model, new PagerOptions
                    {
                        PageIndexParameterName = "index",
                        ContainerTagName = "ul",
                        CssClass = "pagination",

                        CurrentPagerItemWrapperFormatString = "<li class=\"active\"><a href=\"javascript:form.submit();\">{0}</a></li>",
                        PagerItemWrapperFormatString = "<li>{0}</li>",
                        Id = "bootstrappager"
                    })
                </nav>
            </div>

        </div>
    </div>
</div>


<script>
    function del(id) {
        if (confirm('确定删除？')) {
            var url = '/Goods/GoodsDelete';
            $.post(url, { "id": id }, function (data) {
                $.procAjaxData(data, function () {
                    location.href = "/Goods/GoodsList";
                })
            });
        }
    }
</script>


